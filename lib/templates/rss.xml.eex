<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
    <channel>
        <atom:link href="https://blog.1-800-rad-dude.com/rss.xml" rel="self" type="application/rss+xml" />
        <title>1-800-RAD-DUDE.com Blog</title>
        <description>1-800-rad-dude.com Blog</description>
        <link>https://https://blog.1-800-rad-dude.com/</link>
        <language>en-us</language>
        <lastBuildDate><%= Blog.RSSDateTime.to_string(DateTime.utc_now()) %></lastBuildDate>
        <%= for post <- @posts do %>
        <item>
            <title><%= post.title %></title>
            <description><%= post.description %></description>
            <link>https://blog.1-800-rad-dude.com/<%= post.path %></link>
            <guid>https://blog.1-800-rad-dude.com/<%= post.path %></guid>
            <pubDate><%= Blog.RSSDateTime.to_string(post.datetime) %></pubDate>
        </item>
        <% end %>
    </channel>
</rss>
